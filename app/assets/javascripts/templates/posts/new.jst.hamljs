%form#new-post{name: "post"}
  %fieldset
    %legend New
    .control-group
      %label.control-label{for: "title"} Title:
      .controls
        %input#title.span6{name: "title", type: "text"}

    .control-group
      %label.control-label{for: "content"} Content:
      .controls
        %textarea#content.span6{name: "content", rows: 15}

    .form-actions
      %input#new-post.btn.btn-primary{type: "submit"}
      %a.btn{href: "#/posts/index"} Cancel
